<Page x:Class="Shoe41.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shoe41"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage" FontFamily="Comic Sans MS">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <TextBlock Text="Логин" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="18" Margin="5" FontWeight="Bold"/>
        <TextBlock Text="Пароль" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="18" Margin="5" FontWeight="Bold"/>

        <TextBox Name="LoginTB" Text="loginDEonq2018" Grid.Column="1" Grid.Row="0" Width="200" Height="25" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="5"/>
        <TextBox Name="PasswordTB" Text="mKIIRQ" Grid.Column="1" Grid.Row="1" Width="200" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5"/>

        <TextBox Visibility="Hidden" Name="CaptchaTB" Grid.Row="2" Grid.Column="0" Width="100" Height="25" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <StackPanel Name="CaptchaSP" Visibility="Hidden" Orientation="Horizontal" Grid.Row="2" Grid.Column="1">
            <TextBlock Name="captchaOneWord" FontSize="22" Margin="30,0,0,0" Foreground="Red"/>
            <TextBlock Name="captchaTwoWord" FontSize="22" TextDecorations="Strikethrough" Margin="0,5,0,0" Foreground="Green"/>
            <TextBlock Name="captchaThreeWord" FontSize="22"  TextDecorations="Strikethrough" Foreground="Blue"/>
            <TextBlock Name="captchaFourWord" FontSize="22"  TextDecorations="Strikethrough" Margin="0,10,0,0" Foreground="Violet"/>
        </StackPanel>

        <Button Content="Войти как гость" Name="LoginGuestButton" Grid.Column="0" Grid.Row="2" Width="200" Height="35" HorizontalAlignment="Center" VerticalAlignment="Center" Click="LoginGuestButton_Click"/>
        <Button Content="Войти" Name="LoginButton" Grid.Column="1" Grid.Row="2" Width="200" Height="35" HorizontalAlignment="Center" VerticalAlignment="Center" Click="LoginButton_Click"/>
    </Grid>
</Page>
