<Window x:Class="Shoe41.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shoe41"
        mc:Ignorable="d"
        Title="OrderWindow" Height="450" Width="1000" MinWidth="100" FontFamily="Comic Sans MS" FontSize="17">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Дата формирования заказа" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center"/>
        <DatePicker Name="OrderDP" Text="Выбор даты" Grid.Column="1" Grid.Row="0" IsEnabled="False"/>

        <TextBlock Text="Дата доставки заказа" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"/>
        <DatePicker Name="DeliveryDP" Text="Выбор даты" Grid.Column="1" Grid.Row="1" IsEnabled="False"/>
        
        <TextBlock Text="ФИО клиента" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center"/>
        <TextBlock Name="ClientNameTB" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center"/>

        <TextBlock Text="Номер заказа" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center"/>
        <TextBlock Name="OrderIdTB" Grid.Column="1" Grid.Row="3" VerticalAlignment="Center"/>

        <ListView Name="ShoeListView" Grid.ColumnSpan="2" Grid.Row="4">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="650"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                        </Grid.RowDefinitions>
                        <Image Grid.RowSpan="4" HorizontalAlignment="Left">
                            <Image.Source>
                                <Binding Path="ImagePath">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            res/picture.png
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>

                        <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding ProductName}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding ProductDescription}" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                        <TextBlock Grid.Column="1" Grid.Row="2" Text="{Binding ProductManufacturer}" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        <TextBlock Grid.Column="1" Grid.Row="3" Text="{Binding ProductCost, StringFormat={}{0:F0} руб.}" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>

                        <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="0" Grid.RowSpan="4" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <Button Name="MinusBtn" Content="-" Width="15" VerticalAlignment="Center" Click="MinusBtn_Click"/>
                            <TextBlock Name="CountTB" Text="{Binding Quantity}" Width="15" VerticalAlignment="Center"/>
                            <Button Name="PlusBtn" Content="+" Width="15" VerticalAlignment="Center" Click="PlusBtn_Click"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBlock Text="Пункт выдачи" Grid.Column="0" Grid.Row="5" VerticalAlignment="Center"/>
        <ComboBox Name="PickUpPointCB" Grid.Column="1" Grid.Row="5">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Address}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>


        <Button Name="SaveButton" Content="Сохранить" Grid.Column="1" Grid.Row="6" HorizontalAlignment="Center" VerticalAlignment="Center" Click="SaveButton_Click"/>

    </Grid>
</Window>
